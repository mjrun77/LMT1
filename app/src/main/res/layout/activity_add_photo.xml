<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >

        <ImageView
            android:id="@+id/redIvItem"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/add_circle_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/redIvItem"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="Парк Гуэля, Барселона"
            android:textSize="18sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="#000000"
        android:layout_marginTop="2dp"
        android:id="@+id/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/redIvIconNone"
            android:src="@mipmap/ic_map_marker_black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/redTvPlaceNone"
            android:layout_toRightOf="@+id/redIvIconNone"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Местоположение"
            android:textColor="@color/grey_light"/>

        <TextView
            android:id="@+id/redIvTeNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/redIvIconNone"
            android:layout_marginLeft="16dp"
            android:text="Испания, Барселона"
            android:layout_below="@id/redTvPlaceNone"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.1"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/redIvTeNone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/redIvIcon2None"
            android:src="@mipmap/ic_view_grid_black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/redTvPlacesNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Категория"
            android:layout_toRightOf="@id/redIvIcon2None"
            android:layout_marginLeft="16dp"
            android:textColor="@color/light_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Места"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/redTvPlacesNone"
            android:layout_toRightOf="@+id/redIvIcon2None"
            android:layout_toEndOf="@+id/redIvIcon2None" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="#000000"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Добавить описание..."
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@id/redIvTeNone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/redIvCatNone"
            android:src="@mipmap/ic_apps_black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/redTvGNone"
            android:layout_toRightOf="@+id/redIvCatNone"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="В альбоме"
            android:textColor="@color/light_grey"/>



        <TextView
            android:id="@+id/redIvTexNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Галерея"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@+id/redTvGNone"

            android:layout_alignLeft="@+id/redTvGNone"
            android:layout_alignStart="@+id/redTvGNone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.1"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/redIvTexNone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Switch
            android:text="Опубликовать на модерацию"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/switch1" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="#000000"
        android:layout_marginTop="10dp"/>

</LinearLayout>
